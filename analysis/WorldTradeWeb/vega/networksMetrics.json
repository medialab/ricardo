  {
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 600,
  "height":600,
  "padding": 5,

  "signals": [
     {"name":"blockNumber", "update":"4"},
    {
      "name": "indexDate",
      "update": "1833",
      "on": [
        {
          "events": "mousemove",
          "update": "clamp(round(invert('xyears', x('metric'))),1833,1938)"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "networkMetrics",
      "url": "./data/networkMetrics.json"
    },
    {
      "name": "flows",
      "source": "networkMetrics",
      "transform":[
        {"type":"fold", "fields":["nb_flows", "mirrorFlows"]},
        {"type":"stack", "groupby" :["year"] , "field":"value", "sort":{"field":"key","order":"descending"}}
      ]
    },
    {
      "name":"entities",
      "source": "networkMetrics",
      "transform":[
        {"type": "formula", "as": "nb_entities_group", "expr": "datum.nb_entities_group ? datum.nb_entities_group : 0"},
        {"type": "formula", "as": "nb_entities_city/part_of", "expr": "datum['nb_entities_city/part_of'] ? datum['nb_entities_city/part_of'] : 0"},
        {"type":"fold", "fields":["nb_entities_country", "nb_entities_city/part_of", "nb_entities_group", "nb_entities_colonial_area", "nb_entities_geographical_area"]},
        {"type":"stack", "groupby" :["year"] , "field":"value", "sort":{"field":"key","order":"descending"}}
      ]
    }


  ],
  "scales":[
    {
      "name":"xyears",
      "type":"linear",
      "range":"width",
      "nice":true,
      "domain":{"data": "networkMetrics", "field":"year"},
      "zero":false
    },
    {
      "name": "flow_color",
      "type": "ordinal",
      "domain":{"data":"flows","field":"key"},
      "range": {"scheme" : "paired"}
    },
    {
      "name": "entity_color",
      "type": "ordinal",
      "domain":{"data":"entities","field":"key"},
      "range": { "scheme" : "accent"}
    },
    {
      "name": "flowScale",
      "type": "linear",
      "range": [{"signal":"height/blockNumber-15"},0],
      "domain":{"data":"flows", "field": "y1"}
    },
        {
      "name": "entityScale",
      "type": "linear",
      "range": [{"signal":"height/blockNumber*2-15"},{"signal":"height/blockNumber"}],
      "domain":{"data":"entities", "field":"y1"}
    },
    {
      "name": "densityScale",
      "type": "linear",
      "range": [{"signal":"height/blockNumber*3-15"},{"signal":"height/blockNumber*2"}],
      "domain":{
        "data": "networkMetrics",
        "field": "density"
      }
    },
    {
      "name": "modularityScale",
      "type": "linear",
      "range": [{"signal":"height"},{"signal":"height/blockNumber*3"}],
      "domain":{
        "data": "networkMetrics",
        "field": "modularity"
      }
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "xyears", "zindex": 1, "grid": true },
  
         {
          "title":"flows",
          "orient": "left",
          "scale": "flowScale",
          "grid": true
         },
         {
          "title":"entities",
          "orient": "left",
          "scale": "entityScale",
          "grid": true
         },
         {
           "title":"density",
          "orient": "left",
          "scale": "densityScale",
          "grid": true,
          "zero": false
         },
        {
           "title":"modularity",
          "orient": "left",
          "scale": "modularityScale",
          "grid": true,
          "zero": false
         }
  ],
  "legends":[
        {
          "title":"flows",
          "type":"symbol",
          "fill":"flow_color"
        },
        {
          "title":"Entities type",
          "type":"symbol",
          "fill":"entity_color"
        }
      ],
   "marks": [
    {
      "name": "metric",
      "type": "group",
       "marks": [

       { 
          "type":"group",
          "from": {
            "facet": {
              "name": "flowAreas",
              "data": "flows",
              "groupby": "key"
            }
          },      
          "marks":[
            {
              "type": "area",
              "from": {"data": "flowAreas"},
              "encode": {
                "enter": {
                  "x": {"scale": "xyears", "field": "year"},
                  "y": {"scale": "flowScale", "field": "y0"},
                  "y2": {"scale": "flowScale", "field": "y1"},
                  "fill": {"scale": "flow_color", "field": "key"}
                }
              }
            }
          ]
        },
        
        { 
          "type":"group",
          "from": {
            "facet": {
              "name": "areas",
              "data": "entities",
              "groupby": "key"
            }
          },      
          "marks":[
            {
              "type": "area",
              "from": {"data": "areas"},
              "encode": {
                "enter": {
                  "x": {"scale": "xyears", "field": "year"},
                  "y": {"scale": "entityScale", "field": "y0"},
                  "y2": {"scale": "entityScale", "field": "y1"},
                  "fill": {"scale": "entity_color", "field": "key"}
                }
              }
            }
          ]
        },
       
        {
          "type": "line",
          "from": {"data": "networkMetrics"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "densityScale", "field": "density"},
              "stroke": {"value":"grey"},
              "strokeWidth": {"value": 2}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        },
         {
          "type": "line",
          "from": {"data": "networkMetrics"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "modularityScale", "field": "modularity"},
              "stroke": {"value":"grey"},
              "strokeWidth": {"value": 2}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        },
        {
          "type": "rule",
          "encode": {
            "update": {
              "x": {"scale": "xyears", "signal": "indexDate", "offset": 0.5},
              "y": {"value": 0},
              "y2": {"signal":"height"},
              "stroke": {"value": "grey"},
              "zindex":0
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "update": {
              "x":  {"scale": "xyears", "signal": "indexDate", "offset": 10},
              "y": {"value": 20},
              "fontSize": {"value": 11},
              "text": {"signal": "indexDate"},
              "baseline": {"value": "bottom"},
              "stroke": {"value": "grey"}
            }      
          }
        }
      ]
    }
  ]
}