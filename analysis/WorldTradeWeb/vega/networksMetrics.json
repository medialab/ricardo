  {
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 600,
  "height":400,
  "padding": 5,

  "signals": [
    {"name":"reportingsHeight", "update":"height*0.7"},
    {
      "name": "indexDate",
      "update": "1833",
      "on": [
        {
          "events": "mousemove",
          "update": "clamp(round(invert('xyears', x('metric'))),1833,1938)"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "networkMetrics",
      "url": "./data/networkMetrics.json"
    },
    {
      "name":"folded",
      "source": "networkMetrics",
      "transform":[
        {"type":"fold", "fields":["density", "nb_reportings", "nb_flows"]}
      ]
    },
    {
      "name":"densities",
      "source": "folded",
      "transform":[
        {"type":"filter", "expr":"datum.key == 'density'"}
      ]
    },
    {
      "name":"reportings",
      "source": "folded",
      "transform":[
        {"type":"filter", "expr":"datum.key == 'nb_reportings'"}
      ]
    },
    {
      "name":"flows",
      "source": "folded",
      "transform":[
        {"type":"filter", "expr":"datum.key == 'nb_flows'"}
      ]
    }


  ],
  "scales":[
    {
      "name":"xyears",
      "type":"linear",
      "range":"width",
      "nice":true,
      "domain":{"data": "folded", "field":"year"},
      "zero":false
    },
    {
      "name": "metric_color",
      "type": "ordinal",
      "domain":{"data":"folded","field":"key"},
      "range": "category"
    },
    {
      "name": "flowScale",
      "type": "linear",
      "range": [{"signal":"height"},0],
      "domain":{"data":"flows", "field":"value"}
    },
        {
      "name": "reportingScale",
      "type": "linear",
      "range": [{"signal":"height"},{"signal":"reportingsHeight"}],
      "domain":{"data":"reportings", "field":"value"}
    },
    {
      "name": "densityScale",
      "type": "linear",
      "range": [{"signal":"height"},0],
      "domain":{
        "data": "networkMetrics",
        "field": "density"
      }
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "xyears", "zindex": 1},
  
         {
          "title":"flows",
          "orient": "left",
          "scale": "flowScale",
          "ticks": true
         },
         {
          "title":"reportings",
          "orient": "left",
          "scale": "reportingScale",
          "ticks": true,
          "offset":{
            "value": 40
          }
         },
         {
           "title":"density",
          "orient": "right",
          "scale": "densityScale",
          "ticks": true
         }
  ],
  "legends":[
        {
          "title":"Networks Metrics",
          "type":"symbol",
          "fill":"metric_color"
        }
      ],
   "marks": [
    {
      "name": "metric",
      "type": "group",
       "marks": [

        {
          "type": "line",
          "from": {"data": "reportings"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "reportingScale", "field": "value"},
              "stroke": {"scale": "metric_color", "field": "key"}
            }
          }
        },
        {
          "type": "line",
          "from": {"data": "flows"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "flowScale", "field": "value"},
              "stroke": {"scale": "metric_color", "field": "key"}
            }
          }
        },
        
        {
          "type": "line",
          "from": {"data": "densities"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "densityScale", "field": "value"},
              "stroke": {"scale": "metric_color", "field": "key"},
              "strokeWidth": {"value": 2}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        },
        {
          "type": "rule",
          "encode": {
            "update": {
              "x": {"scale": "xyears", "signal": "indexDate", "offset": 0.5},
              "y": {"value": 0},
              "y2": {"signal":"height"},
              "stroke": {"value": "grey"}
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "update": {
              "x":  {"scale": "xyears", "signal": "indexDate", "offset": 10},
              "y": {"value": 20},
              "fontSize": {"value": 11},
              "text": {"signal": "indexDate"},
              "baseline": {"value": "bottom"},
              "stroke": {"value": "grey"}
            }      
          }
        }
      ]
    }
  ]
}