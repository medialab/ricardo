  {
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 600,
  "padding": 5,

  "signals": [
    {"name": "offset", "value": 15},
    {"name": "cellHeight", "value": 250},
    {"name": "height", "update": "2 * (offset + cellHeight)"},
    {
      "name": "reporting_1",
      "value": "France",
      "bind": {
        "input": "select",
        "options": ["France","United Kingdom","Germany"]
      }
    },
    {
      "name": "reporting_2",
      "value": "United Kingdom",
      "bind": {
        "input": "select",
        "options": ["France","United Kingdom","Germany"]}
    },
     {
      "name": "reporting_3",
      "value": "Germany",
      "bind": {
        "input": "select",
        "options": ["France","United Kingdom","Germany"]}
    },
     {
      "name": "reporting_4",
      "value": "Spain",
      "bind": {
        "input": "select",
        "options": ["France","United Kingdom","Germany"]}
    },
      {
      "name": "reporting_5",
      "value": "Netherlands",
      "bind": {
        "input": "select",
        "options": ["France","United Kingdom","Germany"]}
    },
    
    {
      "name": "reportings",
      "update": "[reporting_1,reporting_2,reporting_3,reporting_4,reporting_5]"
    }
  ],
   "data": [
    {
      "name": "ricardo",
      "url": "./data/gapminderRICardo.json"
    },
    {
      "name": "filtered",
      "source":"ricardo",
       "transform":[{
          "type": "filter",
          "expr": "indexof(reportings,datum.reporting) != -1"
        }]
    },
    { 
      "name": "folded",
      "source":"filtered",
      "transform":[{
          "type": "fold", 
          "fields": ["pagerank", "worldTradePart"]
        }]
    }
    ],
  "scales":[
    {
      "name": "gscale",
      "type": "band",
      "range": [0, {"signal": "height"}],
      "round": true,
       "domain": {
        "data": "folded",
        "field": "key"
      }
    },
    {
      "name":"xyears",
      "type":"linear",
      "range":"width",
      "nice":true,
      "domain":{"data": "folded", "field":"year"},
      "zero":false
    },
    {
          "name": "reporting_color",
          "type": "ordinal",
          "domain":{
            "data": "folded",
            "field": "reporting"
          },
      "range": "category"
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "xyears", "zindex": 1}
  ],
  "legends":[
        {
          "title":"reporting",
          "type":"symbol",
          "fill":"reporting_color"
        }
      ],
   "marks": [
    {
      "name": "metric",
      "type": "group",

       "from": {
        "facet": {
          "data": "folded",
          "name": "metrics",
          "groupby": "key"
        }
      },
      "encode": {
        "enter": {
          "y": {"scale": "gscale", "field": "key", "offset": {"signal": "offset"}},
          "height": {"signal": "cellHeight"},
          "width": {"signal": "width"},
          "stroke": {"value": "#ccc"}
        }
      },
      "scales": [
        {
          "name": "yscale",
          "type": "linear",
          "range": [{"signal": "cellHeight"},0],
          "domain":{
            "data": "metrics",
            "field": "value"
          }
        }
      ],
      
      "axes": [
        {
          "orient": "left",
          "scale": "yscale",
          "ticks": true
         }
      ],
      "marks": [
        
        {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "metrics",
          "groupby": "reporting"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "yscale", "field": "value"},
              "stroke": {"scale": "reporting_color", "field": "reporting"},
              "strokeWidth": {"value": 2}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        }
      ]
    }
      ]
     
    },

    {
      "type": "text",
      "from": {"data": "metric"},
      "encode": {
        "enter": {
          "x": {"field": "width", "mult": 0.5},
          "y": {"field": "y"},
          "fontSize": {"value": 11},
          "fontWeight": {"value": "bold"},
          "text": {"field": "datum.key"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "#000"}
        }
      }
    }
  ]
}