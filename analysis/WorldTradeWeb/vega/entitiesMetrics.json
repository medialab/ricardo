    {
      "name": "ricardo",
      "url": "./data/gapminderRICardo.json"
    },
    {
      "name": "filtered",
      "source":"ricardo",
       "transform":[{
          "type": "filter",
          "expr": "indexof(reportings,datum.reporting) != -1"
        }]
    },
    { 
      "name": "folded",
      "source":"filtered",
      "transform":[{
          "type": "fold", 
          "fields": ["pagerank", "worldTradePart", "herfindahl", "inHerfindahl", "outHerfindahl"]
        }]
    }
    ],
  "scales":[
    {
      "name": "gscale",
      "type": "band",
      "range": [0, {"signal": "height"}],
      "round": true,
       "domain": {
        "data": "folded",
        "field": "key"
      }
    },
    {
      "name":"xyears",
      "type":"linear",
      "range":"width",
      "nice":true,
      "domain":{"data": "folded", "field":"year"},
      "zero":false
    },
    {
          "name": "reporting_color",
          "type": "ordinal",
          "domain":{
            "data": "folded",
            "field": "reporting"
          },
      "range": "category"
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "xyears", "zindex": 1}
  ],
 
   "marks": [
    {
      "name": "metric",
      "type": "group",

       "from": {
        "facet": {
          "data": "folded",
          "name": "metrics",
          "groupby": "key"
        }
      },
      "encode": {
        "enter": {
          "y": {"scale": "gscale", "field": "key", "offset": {"signal": "offset"}},
          "height": {"signal": "cellHeight"},
          "width": {"signal": "width"},
          "stroke": {"value": "#ccc"}
        }
      },
      "scales": [
        {
          "name": "yscale",
          "type": "linear",
          "range": [{"signal": "cellHeight"},0],
          "domain":{
            "data": "metrics",
            "field": "value"
          }
        }
      ],
      
      "axes": [
        {
          "orient": "left",
          "scale": "yscale",
          "ticks": true
         },
        {"orient": "bottom", "scale": "xyears", "zindex": 1}
      ],
       "legends":[
        {
          "type":"symbol",
          "fill":"reporting_color"
        }
      ],
      "marks": [
        
        {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "metrics",
          "groupby": "reporting"
        }
      },
      "marks": [
         {
          "type": "symbol",
          "interactive":true,
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "yscale", "field": "value"},
              "stroke": {"scale": "reporting_color", "field": "reporting"},
              "strokeWidth": {"value": 2},
              "size":{"value":10},
              "fillOpacity":{"value":1},
              "fill": {"scale": "reporting_color", "field": "reporting"},
              "zindex":0
            }
          }
        },
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "xyears", "field": "year"},
              "y": {"scale": "yscale", "field": "value"},
              "stroke": {"scale": "reporting_color", "field": "reporting"},
              "strokeWidth": {"value": 2}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        },
        {
      "type": "rule",
      "encode": {
        "update": {
          "x": {"scale": "xyears", "signal": "indexDate", "offset": 0.5},
          "y": {"value": 0},
          "y2": {"signal":"cellHeight"},
          "stroke": {"value": "firebrick"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "update": {
          "x":  {"scale": "xyears", "signal": "indexDate", "offset": 10},
          "y": {"value": 20},
          "fontSize": {"value": 11},
          "text": {"signal": "indexDate"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "firebrike"}
        }      
      }
    }
    
      ]
    }
